<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tab_tv"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3.5dp"
        android:background="@drawable/pay_at_hotel_view"
        android:paddingBottom="6dp"
        android:paddingRight="9dp"
        android:paddingTop="6dp"
        android:text="PAY AT HOTEL"
        android:textColor="@color/tabTitle1"
        android:textSize="9sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tab_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:src="@drawable/ic_pay_at_hotel" />

    <LinearLayout
        android:id="@+id/tab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_img"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tab_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rates from EUR 83"
            android:textStyle="bold"
            android:textColor="@color/tabDetails"
            android:textSize="11.5sp" />

        <TextView
            android:id="@+id/tab_taxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Taxes not included"
            android:textColor="@color/tabDetails"
            android:textSize="11.5sp" />


    </LinearLayout>


</RelativeLayout>