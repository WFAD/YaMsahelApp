<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check in"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/check_in_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sep 13,2017"
            android:textColor="#3f5882"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/check_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Wed, 2 PM"
            android:textColor="#637a9c"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/booked_nights"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"

        android:text="1\n Night"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/check_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sep 14,2017"
            android:textColor="#3f5882"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/check_out_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thu, 12 PM"
            android:textColor="#637a9c"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>