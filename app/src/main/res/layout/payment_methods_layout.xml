<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/payWithCash"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tab_tv"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/pay_at_hotel_view"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingRight="9dp"
            android:paddingTop="6dp"
            android:text="PAY AT HOTEL"
            android:textColor="@color/tabTitle1"
            android:textSize="9sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tab_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:src="@drawable/ic_pay_at_hotel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payWithCard"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tab_tv1"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/pay_at_hotel_view"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingRight="9dp"
            android:paddingTop="6dp"
            android:text="PAY WITH CREDIT CARD"
            android:textColor="@color/tabTitle1"
            android:textSize="9sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tab_img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:src="@drawable/ic_pay_at_hotel" />
    </RelativeLayout>



</LinearLayout>